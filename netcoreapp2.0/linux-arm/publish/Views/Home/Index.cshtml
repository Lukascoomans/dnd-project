@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="align-center">
    <h1>Login</h1>
    <p>
       @ViewBag.Failed
    </p>

    <form action="http://localhost:51215/students/LoginStudent" method="post">
        <div class="form-group">
            <label for="StudentId">Studentennummer: </label>
            <input type="number" class="form-control" name="StudentId" id="StudentId" placeholder="studentennummer: 11223344" required>
        </div>
        <div class="form-group">
            <label for="Password">Wachtwoord</label>
            <input type="password" class="form-control" name="Password" id="Password" placeholder="Wachtwoord" required>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
</div> 
